{
    "editor.rulers": [
        100
    ],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "files.eol": "\n",

    "files.associations": {
        "*.x": "qumulo-x",
        "*.h": "c",
        "*.c": "c",
    },

    "files.exclude": {
        ".mypy_cache/": true,
        ".qpkg/": true,
        ".ruff_cache/": true,
        "**/*.orig": true,
        "**/*.rej": true,
        "**/*~": true,
        "**/*code_labs*": true,
        "cscope.out": true,
        "rust-project.json": true,
        "tags": true,
        "TAGS": true,
        "build/**/.dependencies_headers": true,
        "build/**/*.bc": true,
        "build/**/*.ctags": true,
        "build/**/*.d": true,
        "build/**/*.etags": true,
        "build/**/*.export": true,
        "build/**/*.gen_deps": true,
        "build/**/*.i": true,
        "build/**/*.import": true,
        "build/**/*.ld": true,
        "build/**/*.list": true,
        "build/**/*.map": true,
        "build/**/*.matches": true,
        "build/**/*.pch": true,
        "build/**/*.proof": true,
        "build/**/*.rmeta": true,
        "build/**/*.run": true,
        "build/**/*.signature": true,
        "build/**/*.signatures": true,
        "build/**/*.so": true,
        "build/**/*.symbols": true,
        "build/**/*.types": true,
        "build/**/*closure": true,
        "build/**/*test_c": true,
        "build/.qonstruct/": true,
        "build/images/": true,
        "build/lint/": true,
        "build/py.deps/": true,
        "build/tmp/": true,
        "build/toolchain/src/": true,
        "build/toolchain/toolchain_chroot/": true,
    },

    "files.watcherExclude": {
        "build/": true,
    },

    "search.useIgnoreFiles": false,

    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "clang-format.executable": "/opt/qumulo/toolchain/bin/clang-format",
    "clang-format.language.c.style": "file",

    "[c]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "xaver.clang-format",
    },

    "rust-analyzer.server.path": "/opt/qumulo/toolchain/bin/rust-analyzer",
    "rust-analyzer.rustfmt.overrideCommand": [
        "/opt/qumulo/toolchain/bin/rustfmt"
    ],
    "rust-analyzer.showRequestFailedErrorNotification": false,

    "[rust]": {
        "editor.formatOnSave": false,
        "editor.codeLens": false,
    },

    "[python]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports.ruff": "explicit",
        },
    },

    "python.defaultInterpreterPath": "/opt/qumulo/toolchain/bin/qpython",
    // XXX Steven: You used to be able to put a symlink from ~/qinternal to ~/src and then
    // autocomplete would work, but it doesn't seem to be working for me.
    "python.autoComplete.extraPaths": ["~"],

    "git.enabled": false,
}
