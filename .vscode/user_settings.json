{
    // Remote
    "remote.SSH.remotePlatform": {
        "steven.eng.qumulo.com": "linux",
        "steven-desktop": "linux",
        "coder-steven-dev": "linux"
    },

    // Editing
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingComments": "never",
    "editor.autoClosingQuotes": "never",
    "editor.find.cursorMoveOnType": true,
    "editor.find.seedSearchStringFromSelection": "never",
    "search.seedOnFocus": true,
    "editor.inlineSuggest.enabled": true,
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.enablePreview": false,

    // Rust
    "editor.inlayHints.enabled": "off",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "*.mutable": {
                "underline": false
            }
        }
    },

    // UI
    "editor.minimap.showSlider": "always",
    "editor.renderWhitespace": "none",
    "editor.stickyScroll.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,

    // Color theme
    "workbench.colorCustomizations": {
        "[Default Dark Modern]": {
            "editor.background": "#000000",
            "panel.background": "#000000",
            "terminal.background": "#000000",
            "sideBar.background": "#000000",
        }
    },

    // Terminal keybindings
    // "allow" here means VSCode is going to intercept these. We want to forward them to terminal.
    "terminal.integrated.allowChords": false,
    "terminal.integrated.allowMnemonics": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.macOptionIsMeta": true,

    // Terminal AI integration
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.automationProfile.linux": {
        "path": "/bin/bash"
    },

    // Misc
    "extensions.ignoreRecommendations": true,
    "emacs-mcx.useMetaPrefixMacCmd": true,
    "diffEditor.ignoreTrimWhitespace": true,

    // Cursor
    "cursor.cpp.disabledLanguages": [
        "scminput"
    ],
    "cursor.composer.usageSummaryDisplay": "always",
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.composer.shouldAutoAcceptDiffs": false,

    // Old debugging cruft, kill if it doesn't matter:
    // "explorer.autoReveal": false,
    // "workbench.editor.revealIfOpen": false,
    // "workbench.editor.focusRecentEditorAfterClose": false,
    // "editor.accessibilitySupport": "off",

    // Claude Code
    "claudeCode.preferredLocation": "panel",
    "claudeCode.selectedModel": "default",
    "claudeCode.initialPermissionMode": "acceptEdits",

    // Auto below here:
    "workbench.colorTheme": "Default Dark Modern",
    "editor.accessibilitySupport": "off",
}
